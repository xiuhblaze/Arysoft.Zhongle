@model IEnumerable<ApplicationRole>

@using Arysoft.Website.Models;

@{
    ViewBag.Title = "Roles de usuario";
}

<div class="container">
    <h2>Roles de usuario</h2>

    <ul class="nav nav-pills">
        <li>
            @Html.ActionLink("Nuevo Rol", "Create")
        </li>
    </ul>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="col-md-1">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.Raw(
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }).ToHtmlString()
                            .Replace("Editar", "<span class='glyphicon glyphicon-edit' style='font-size: 18px;' title='Editar'></span>")
                        )
                        @Html.Raw(
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }).ToHtmlString()
                            .Replace("Detalles", "<span class=\"glyphicon glyphicon-share\" style=\"font-size: 18px;\" title=\"Detalles\"></span>")
                        )
                        @Html.Raw(
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }).ToHtmlString()
                            .Replace("Eliminar", "<span class=\"glyphicon glyphicon-trash\" style=\"font-size: 18px;\" title=\"Eliminar\"></span>")
                        )
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>