@{
    string tituloApp = Comun.TITULO_APP;
    string messageBox = string.Empty;
    string showMessageBox = string.Empty;
    string imgLogoUrl = Url.Content("~/Images/imgLogo.png");

    if (TempData["MessageBox"] != null)
    {
        messageBox = TempData["MessageBox"].ToString().Replace(Environment.NewLine, "<br />");
        showMessageBox = "<script> $('#messageBoxModal').modal('show'); </script>";
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @tituloApp</title>
    <link href="~/favicon.png" rel="shortcut icon" type="image/png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("styles", required: false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="https://use.fontawesome.com/0172846d95.js"></script>
</head>
<body>
    <div id="messageBoxModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">@Html.Raw(Comun.TITULO_APP)</h4>
                </div>
                <div class="modal-body">
                    @messageBox
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->



    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(tituloApp, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated &&
                    User.IsInRole("Consultant")
                    || User.IsInRole("Editor")
                    || User.IsInRole("SectorEditor")
                    || User.IsInRole("Admin"))
                    {
                    <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
                    <li>@Html.ActionLink("Sectores", "Index", "Sector")</li>
                    <li>@Html.ActionLink("Secciones", "Index", "Seccion")</li>
                    <li>@Html.ActionLink("Casillas", "Index", "Casilla")</li>
                    if (User.IsInRole("Admin") || User.IsInRole("Auditor"))
                    { 
                        <li>@Html.ActionLink("Auditorias", "Index", "Auditoria")</li>
                    }
                    
                    if (User.IsInRole("Admin") || User.IsInRole("Editor") || User.IsInRole("SectorEditor"))
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            Catálogos <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Colonias", "Index", "Colonia")</li>
                            <li>@Html.ActionLink("Calles", "Index", "Calle")</li>
                        </ul>
                    </li>
                    }
                }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>



    <div class="container-fluid body-content">
        @RenderBody()
        
        <div class="container" style="padding-top: 20px; padding-bottom: 20px;">
            <footer>
                <p>&copy; @DateTime.Now.Year - @tituloApp</p>
            </footer>
        </div>        
    </div>
        
    @RenderSection("scripts", required: false)

    @Html.Raw(showMessageBox)
</body>
</html>
